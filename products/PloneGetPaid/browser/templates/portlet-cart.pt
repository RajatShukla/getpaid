<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal">

<body>
<div metal:define-macro="portlet"
     tal:define="view context/@@getpaid-shopping-cart">
  
    <dl class="portlet" id="portlet-cart"
	tal:condition="python: view.cart or view.isContextAddable()">

        <dt class="portletHeader">
            <span class="portletTopLeft"></span>
	    Your Cart
            <span class="portletTopRight"></span>
        </dt>

        <dd class="portletItem even"> 
	  Contains <span tal:content="view/size"> 5 </span> Items
	</dd>

	<dd class="portletItem odd" tal:condition="view/isContextAddable">
	  <a href="" tal:attributes="href string:${context/absolute_url}/@@getpaid-cart-add">
	     Add to Cart
	  </a>
        </dd>

        <dd class="portletFooter">
            <a href="" tal:attributes="href string:${context/portal_url}/@@getpaid-cart">
              Manage Cart
            </a>
            <span class="portletBottomLeft"></span>
            <span class="portletBottomRight"></span>
        </dd>
    </dl>

</div>
</body>
</html>
