<div xmls:tal="http://xml.zpope.org/namespaces/tal">

<script type="text/javascript" src="++resource++sequence.js">
</script>

<tal:widget tal:define="name python:view.name;">

<select tal:attributes="id name; name name" onchange="get_states_from_country(this, 'country', 'state')">
<tal:loop tal:repeat="i python: view.getVocabulary()">
        <tal:block tal:define="selected python: view.hasInput() and view.getInputValue() == i.value">
        <option tal:attributes="value python: i.value;" selected="selected"
                tal:content="python: i.title"
                tal:condition="selected"/>
        <option tal:attributes="value python: i.value;" tal:content="python: i.title"
                tal:condition="not:selected"/>
        </tal:block>
</tal:loop>
</select>

    <script type="text/javascript" tal:content="string:country_select = document.getElementById('${name}');
                                                    widget_init = function(){get_states_from_country(country_select, 'country', 'state')};
                                                    addInit(widget_init);
                                                    window.onload = processInits();"/>

</tal:widget>

</div>
