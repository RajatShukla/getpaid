<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="getpaid.variantsproduct">
<body>

    <div metal:fill-slot="main">


    	<h2 i18n:translate="available_variations">
    		Available variations
    	</h2>

		<table class="listing">
			<thead>
				<tr>
					<th i18n:translate="title">Title</th>
					<th i18n:translate="title">Price</th>
				</tr>
			</thead>

			<tbody>
				<tal:items repeat="variation view/variations">
					<tr>
						<td tal:content="variation/title" />
						<td tal:content="variation/price" />
					</tr>
				</tal:items>
			</tbody>
		</table>

		<div tal:replace="view/image_browser" />

    </div>

</body>
</html>
