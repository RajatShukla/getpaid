<!-- settings-payment-processors.pt -->
<metal:page use-macro="context/@@manage-getpaid-settings-template/admin">
  <metal:block fill-slot="admin_content">
    <tal:core tal:define="portal_state context/@@plone_portal_state"
              i18n:domain="getpaid.paymentprocessors">
      <h1 i18n:translate="choose_payment_method">Choose Payment Method</h1>
      <table>
        <thead>
          <tr>
            <th i18n:translate="payment_processor">Payment Processor</th>
          </tr>
        </thead>
        <tbody>
          <tal:payment-methods define="processors view/getProcessors">
            <tr tal:repeat="processor processors">
              <td class="payment-processor-link">
                <a tal:attributes="href string:${portal_state/portal_url}/@@${processor/settings_view}" i18n:translate="edit_settings">Edit <span tal:content="processor/name" i18n:name="processor_name"/> Settings</a> 
              </td>
            </tr>
          </tal:payment-methods>
        </tbody>
      </table>
    </tal:core>
  </metal:block>
</metal:page>
