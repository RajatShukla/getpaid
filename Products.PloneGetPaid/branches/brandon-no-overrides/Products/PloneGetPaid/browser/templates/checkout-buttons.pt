<form tal:condition="view/show_onsite_button"
      method="GET" action="/your-site/@@getpaid-checkout-wizard"
      tal:attributes="action string:${context/portal_url}/@@getpaid-checkout-wizard">
  <input type="submit" class="button context"
         id="form.actions.checkout"
         value="Check out" />
</form>
<tal:loop tal:repeat="offsite_button view/offsite_buttons">
  <tal:span tal:replace="structure offsite_button" />
</tal:loop>
