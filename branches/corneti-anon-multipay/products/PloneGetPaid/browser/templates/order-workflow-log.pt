<fieldset i18n:domain="plonegetpaid">
  <legend i18n:translate="legend_order_log"> Order Log </legend>
  <ul>
    <div tal:omit-tag="" tal:repeat="record view/iterRecords">
      <li i18n:translate="text_order_record">
	On <span tal:content="record/change_date" i18n:name="change_date"> July 14th, 2007 </span>
	By <span tal:content="record/changed_by" i18n:name="changed_by"> JohnSmith </span>
	Previous <span tal:content="record/previous_state" i18n:name="previous_state"> Created </span>
	New <span tal:content="record/new_state" i18n:name="new_state"> Delivered </span>
	<span tal:condition="record/comment" tal:content="record/comment" i18n:name="comment"> Comment </span>
      </li>
    </div>
  </ul>
    
</fieldset>

